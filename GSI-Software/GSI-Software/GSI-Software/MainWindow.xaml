<Window x:Class="GSI_Software.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GSI_Software"
        mc:Ignorable="d"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="GSI-Software" Height="450" Width="400">
    <Border>
        <StackPanel>
            <iconPacks:PackIconMaterialLight Kind="Login" Width="250" Height="150" HorizontalAlignment="Center" Margin="10"/>
            <TextBox Margin="40 20 40 10"/>
            <PasswordBox Margin="40 0 40 10"/>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Register" Margin="0 0 80 0"/>
                <Button Grid.Column="1" Content="Login"  Margin="80 0 0 0"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
